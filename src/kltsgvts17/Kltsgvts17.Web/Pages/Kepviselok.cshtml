@page
@using Kltsgvts17.Web.Models;
@model KepviselokModel
@{
    ViewData["Title"] = "Képviselők";
}

    <div class="text-center">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="display-4">XVII. kerületi képviselőnk</h1>
            </div>
        </div>

        @foreach (var kepviselo in Model.KepviseloLista) 
        {
    <div class="row">
        <div class="col-lg-3">
            <div class="card mb-4">
                <div class="card-header">
                    <img src="@kepviselo.KepUrl" class="img-fluid" alt="@kepviselo.Nev" />
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="card mb-4">
                <div class="card-body">
                    <h3>@kepviselo.Nev</h3>
                    <h5>@kepviselo.Szerepkor</h5>
                </div>
                <div class="card-header">
                    <p>
                        <a href="https://www.facebook.com/@kepviselo.FacebookUrl" class="btn btn-primary btn-circle btn-sm" target="_blank">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="https://www.facebook.com/@kepviselo.FacebookUrl" target="_blank">Facebook</a>
                    </p>
                    <p>
                        <div>
                            <h5><a href="mailto:@kepviselo.Email">@kepviselo.Email</a></h5>
                        </div>
                    </p>
                    <p>
                        <div>
                            <h5>@kepviselo.Telefon</h5>
                        </div>
                    </p>
                </div>
            </div>

            <div class="card shadow mb-4">
                <!-- Card Header - Accordion -->
                <a href="#collapseCardEletrajz" class="d-block card-header py-3 collapsed" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="collapseCardEletrajz">
                    <h6 class="m-0 font-weight-bold text-primary">Életrajz</h6>
                </a>
                <!-- Card Content - Collapse -->
                <div class="collapse" id="collapseCardEletrajz" style="">
                    <div class="card-body text-left">
                        <h6>@kepviselo.Eletrajz</h6>
                    </div>
                </div>
            </div>

            @foreach (var tema in kepviselo.Temak)
            {
                <div class="card mb-4 py-3 border-left-primary">
                    <div class="card-body text-left">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            <a href="@tema.Url" target="_blank">@tema.Cim</a>
                        </div>
                        <div>@tema.Leiras</div>
                    </div>
                </div>
            }

        </div>
    </div>
        }        

    </div>

        @section Scripts {
            <!-- Page level plugins -->
            <!-- Page level custom scripts -->
        }
